{% extends 'base.html.twig' %}

{% block title %}Squash Connection - Challenges{% endblock %}

{% block body_id 'challenge_list' %}

{% block header %}
	{% include 'user/_header_user_homepage.html.twig' %}
{% endblock %}

{% block body %}
	<div class="content">
		<div class="container">
			<div class="row">
				<div class="col-sm-10 col-sm-offset-1">
					<div class="panel panel-primary">
						<div class="panel-body">
							<div class="row">
								<div class="col-sm-10 col-sm-offset-1">
									<u><h1>Challenges.</h1></u>
									{% if challenges is not empty %}
									<table class="table table-striped table-bordered">
										<thead>
											<tr>
												<th>Player</th>
												<th>Club</th>
												<th>Date</th>
												<th>Accept/Deny</th>
											</tr>
										</thead>
									{% for challenge in challenges %}
										<tr>
											<td>{{ challenge.player1 }}</td>
											<td>{{ challenge.club }}</td>
											<td>{{ challenge.time|date('l, jS F Y \\a\\t H:i') }}</td>
											<td>
												<a class="btn btn-success btn-xs"href="#">Accept</a>
												<a class="btn btn-danger btn-xs" href="#">Deny</a>
											</td>
										</tr>	
									{% endfor %}
									</table>
									{% else %}
										<h6>There are not new challenges for you.</h6>
									{% endif %}
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock body %}