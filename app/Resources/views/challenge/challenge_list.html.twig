{% extends 'base.html.twig' %}

{% block title %}Squash Connection - Challenges{% endblock %}

{% block body_id 'challenge_list' %}

{% block header %}
	{% include 'user/_header_user_homepage.html.twig' %}
{% endblock %}

{% block body %}
	<div class="content">
		<div class="container">
			<div class="row">
				<div class="col-md-12">
					<div class="panel panel-primary">
						<div class="panel-body">
							<div class="row">
								<div class="col-md-12">
									<u><h1>Challenges.</h1></u>
									{% if challenges is not empty %}
									<table class="table table-striped table-bordered">
										<thead>
											<tr>
												<th>Player</th>
												<th>Club</th>
												<th>Date</th>
												<th>Time</th>
												<th>Messages</th>
												<th>Accept/Deny</th>
											</tr>
										</thead>
									{% for challenge in challenges %}
										<tr>
											<td>{{ challenge.player1Name }} {{ challenge.player1lastName }}</td>
											<td>{{ challenge.clubName }}</td>
											<td>{{ challenge.date|date('l, jS F Y') }}</td>
											<td>{{ challenge.time|date('H:i') }}</td>
											<td>												
												<a href="#"> 
													Messages
													<span class="badge"></span>
												</a>
											</td>
											<td>
												<a class="btn btn-success btn-xs" href="{{ path('challenge_accept', {'slug': challenge.id}) }}">Accept</a>
												<a class="btn btn-danger btn-xs" href="{{ path('challenge_deny', {'slug': challenge.id}) }}">Deny</a>
											</td>
										</tr>
									{% endfor %}
									</table>
									{% else %}
										<h6>There are not new challenges for you.</h6>
									{% endif %}
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock body %}