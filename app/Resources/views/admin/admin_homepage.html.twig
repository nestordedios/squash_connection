{% extends 'base.html.twig' %}

{% block title %} Squash Connection - Admin Homepage {% endblock %}

{% block body_id 'user_homepage'%}

{% block header %}

{% include 'admin/_header_admin_homepage.html.twig' %}

{% endblock %}

{% block body %}
<div class="content">
	<div class="container">
		<div class="row">
			<div class="col-sm-12">
				<div class="panel panel-primary">
					<div class="panel-heading">
						<h3 class="panel-title">Search Players</h3>
					</div>
					<div class="panel-body">
						{% form_theme form 'bootstrap_3_layout.html.twig' %}
						{{form_start(form,{'method': 'POST', 'attr': {'novalidate': 'novalidate', 'class': 'form-inline'}})}}
						<div class="form-group">
						{{ form_label(form.country, 'Country:', {'label_attr': {'class': 'col-sm-4'}}) }}
						{{ form_widget(form.country) }}
						{{ form_errors(form.country) }}
					</div>
					<div class="form-group">
						{{ form_label(form.club, 'Club:', {'label_attr': {'class': 'col-sm-4'}}) }}
						{{ form_widget(form.club) }}
						{{ form_errors(form.club) }}
					</div>
						{{ form_label(form.gender, 'Gender:', {'label_attr': {'class': 'col-sm-4'}}) }}
						{{ form_widget(form.gender) }}
						{{ form_errors(form.gender) }}
						{{ form_label(form.level, 'Level:', {'label_attr': {'class': 'col-sm-4'}}) }}
						{{ form_widget(form.level) }}
						{{ form_errors(form.level) }}
						{{ form_widget(form.search, {'attr': {'class': 'btn btn-primary'}}) }}						
						{{ form_end(form) }}
					</div>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-sm-8 col-sm-offset-2">
				<table class="table table-striped table-bordered">
					<thead>
						<tr>
							<th>Name</th>
							<th>Email</th>
							<th>Gender</th>
							<th>Country</th>
							<th>City</th>
							<th>Level</th>
							<th>Status</th>
							<th>Lock</th>
							<th>Unlock</th>
						</tr>
					</thead>
					<tbody>
						{% for player in players %}
							{% if player.id != app.user.id %}
							<tr id="{{ player.id }}">
								<td>{{ player.name }} {{ player.lastName }}</td>
								<td>{{ player.email }}</td>
								<td>{{ player.gender.name }}</td>
								<td>{{ player.country.name }}</td>
								<td>{{ player.city }}</td>
								<td>{{ player.playingLevel|rating(player.playingLevel, 'fa-lg') }}</td>
								<td id="status">{{ player.status }}</td>
								<td><a class="btn btn-danger" href="#" onclick="lockUser({{ player.id }})">Lock</a></td>
								<td><a class="btn btn-success" href="#" onclick="unlockUser({{ player.id }})">Unlock</a></td>
							</tr>
							{% endif %}
						{% endfor %}
					</tbody>	
				</table>
			</div>
		</div>
	</div>
</div>
{% endblock %}