{% extends 'base.html.twig' %}

{% block title %}Squash Connection - My Matches{% endblock %}

{% block body_id 'my_matches_list' %}

{% block header %}
	{% include 'user/_header_user_homepage.html.twig' %}
{% endblock %}

{% block body %}
	<div class="content">
		<div class="container">
			<div class="row">
				<div class="col-sm-12">
					<div class="panel panel-primary">
						<div class="panel-body">
							<div class="row">
								<div class="col-sm-10 col-sm-offset-1">
									<u><h1>Coming Matches</h1></u>
									{% if matches is not empty %}
									<table class="table table-striped table-bordered">
										<thead>
											<tr>
												<th>Player 1</th>
												<th>Player 2</th>
												<th>Club</th>
												<th>Date</th>
												<th>Time</th>
												<th>Comments</th>
												<th>Result</th>
											</tr>
										</thead>
									{% for match in matches %}
										<tr>
											<td>{{ match.player1Name }} {{ match.player1lastName }}</td>
											<td>{{ match.player2Name }} {{ match.player2lastName }}</td>
											<td>{{ match.clubName }}</td>
											<td>{{ match.date|date('l, jS F Y') }}</td>
											<td>{{ match.time|date('H:i') }}</td>
											<td>												
												<a href="#"> 
													Comments
													<span class="badge"></span>
												</a>
											</td>
											<td>
												{% if match.status == 'Accepted' %}
													<p class="text-success">{{ match.status }}</p>
												{% endif %}
												{% if match.status == 'Denied' %}
													<p class="text-danger">{{ match.status }}</p>
												{% endif %}
												{% if match.status is null %}
													<p class="text-warning">No answer yet</p>
												{% endif %}													
											</td>
										</tr>
									{% endfor %}
									</table>
									{% else %}
										<h6>You haven't challenged someone yet.</h6>
									{% endif %}
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock body %}