{% extends 'base.html.twig' %}

{% block title %} Squash Connection - Send Message {% endblock %}

{% block body_id 'send_message'%}

{% block header %}
	{% include 'admin/_header_admin_homepage.html.twig' %}
{% endblock %}

{% block body %}
<div class="content">
	<div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="panel panel-primary">					
					<div class="panel-body">					
					{{form_start(form,{'method': 'POST', 'attr': {'novalidate': 'novalidate', 'class': 'form-horizontal'}})}}
					<div class="form-group">
						{{ form_label(form.message, 'Message:', {'label_attr': {'class': 'col-md-1'}}) }}
						<div class="col-md-11">
						{{ form_widget(form.message) }}
						</div>
						{{ form_errors(form.message) }}
					</div>
					<div class="">						
						{{ form_widget(form.send, {'attr': {'class': 'btn btn-primary'}}) }}						
						{{ form_end(form) }}
					</div>
					
					</div>
				</div>
			</div>
		</div>
	</div>
</div>	
      <hr>
{% endblock %}
